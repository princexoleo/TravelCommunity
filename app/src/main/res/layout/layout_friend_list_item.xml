<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:paddingBottom="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/suggested_friends_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/suggested_friends_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/suggested_friends_imageView"
                android:text="Price Leo"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/follers_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mymensingh, Bangladesh"
                android:textSize="12sp"
                android:layout_alignBottom="@id/suggested_friends_imageView"
                android:layout_toEndOf="@id/suggested_friends_imageView"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"

                />

            <Button
                android:id="@+id/add_follow_request_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:text="+follow" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>